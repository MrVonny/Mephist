@model Mephist.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="container row my-5">
    <div class="col-12 col-md-4">
        <img src="@Url.Content(Model.GetAvatarPath())" class="img-fluid" />
    </div>
    <div class="col-12 col-md-8">
        <h1>@Model.FullName</h1>
        <table class="table table-borderless">
            <tr>
                <td>Преподаёт предметы:</td>
                <td>
                    @if (Model.Subjects != null) foreach (var subject in Model.Subjects)
                        {
                            <a href="#">@subject</a>
                        }
                </td>
            </tr>
            <tr>
                <td>Преподаёт в институтах:</td>
                <td>
                </td>
            </tr>
        </table>
        <h1>Учебные материалы</h1>
        <table>
            <thead>
                <tr>
                    <td>Название</td>
                    <td>Тип</td>
                    <td>Предмет</td>
                    <td>Описание</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var em in Model.EducationalMaterials)
                {
                    <tr>
                        <td>
                            @em.Name
                        </td>
                        <td>@em.Type</td>
                        <td>@em.Subject</td>
                        <td>@em.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-12">
        <h1>Отзывы</h1>
        @{
            var reviewVM = new Mephist.ViewModels.ReviewViewModel() { EmployeeId = Model.Id };
            await Html.RenderPartialAsync("_AddReview", reviewVM);

        }
        @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedDate))
        {
            <div class="m-3">
                <div class="col-12">
                    <strong>@(review.Anonymously ? "Аноним" : review.User.UserName)</strong>
                    <span>@review.CreatedDate.ToLongDateString() @review.CreatedDate.ToShortTimeString()</span>
                </div>
                <div class="col-12">
                    <p>
                        @review.Text
                    </p>
                </div>
            </div>

        }
    </div>
</div>

