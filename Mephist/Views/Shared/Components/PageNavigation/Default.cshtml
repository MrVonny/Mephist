@{ 
    var nextPage = ViewBag.Page + 1;
    var prevPage = ViewBag.Page - 1;
}

<nav aria-label="Page navigation" class="justify-content-center">
    <ul class="pagination justify-content-center">
        @if (ViewBag.Page == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="@ViewBag.Action" asp-controller="@ViewBag.Controller" asp-route-page="@prevPage " aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }
        @for (int i = 1; i <= ViewBag.MaxPage; i++)
        {
            if (i == ViewBag.Page)
            {
                <li class="page-item active disabled">
                    <a class="page-link" asp-action="@ViewBag.Action" asp-controller="@ViewBag.Controller" asp-route-page="@i">@i</a>
                </li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="@ViewBag.Action" asp-controller="@ViewBag.Controller" asp-route-page="@i">@i</a></li>
            }

        }

        @if (ViewBag.MaxPage == ViewBag.Page)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="@ViewBag.Action" asp-controller="@ViewBag.Controller" asp-route-page="@nextPage" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }

    </ul>
</nav>